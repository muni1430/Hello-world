pipeline{
  agent {label 'main'}
  parameters{
    string (name: 'keyname', defaultValue: 'Ec2all', description: ' ')
            }
  stages{
    stage('Create Launch config'){
      steps{
         sh "aws autoscaling create-launch-configuration --launch-configuration-name newlc2 --image-id ami-00c2004c45b684ad5 --instance-type t2.micro --security-groups sg-0a5f46a4b4cb4783b --key-name " + keyname + " --user-data file://userdata.txt --region us-east-1"
          } 
       }
    stage('ASG'){
      steps{
         sh "aws autoscaling create-auto-scaling-group --auto-scaling-group-name newasg --launch-configuration-name newlc2 --max-size 2 --min-size 1 --availability-zones us-east-1c --region us-east-1"
          } 
        }
  }
}	 
